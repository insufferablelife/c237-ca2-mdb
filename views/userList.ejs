<!DOCTYPE html>
<html lang="en">
 <head>
        <title>Funny MDB</title>
        <link rel="icon" href="images/funky-cirno.gif" type="image/gif">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="styles.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Funny MDB</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/movieList">List of Movies</a>
            </li> 
            <li class="nav-item">
              <a class="nav-link" href="/addMovie">Add New Movie</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/contact">Contact Us</a> 
            </li>  
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li> 
          </ul>
        </div>
      </div>
    </nav>

  <div class="container">
    <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
    <br>
    <div class="text-center"><h2>User Audit Panel</h2></div>
    <br>
    <table class="table table-hover small text-center">
      <thead>
          <tr>
            <th width="100">Username</th>
            <th width="100">Email</th>
            <th width="50">Role</th>
            <th width="50">Date of Birth</th>
            <th width="50">Gender</th>
            <th width="50">Ban Status</th>
            <th width="50">Ban</th>
            <th width="50">Unban</th>
          </tr>
      </thead>
      <tbody>
        <% for(let i=0; i < users.length; i++) { %>
          <tr>
            <td><%= users[i].username %></a></td>
            <td><%= users[i].email %></td>
            <td><%= users[i].role %></td>
            <td>
              <% 
                let date = new Date(users[i].birthday);
                let day = String(date.getDate()).padStart(2, '0');
                let month = String(date.getMonth() + 1).padStart(2, '0');
                let year = date.getFullYear();
                let formattedDate = `${day}/${month}/${year}`;
              %>
              <%= formattedDate %>
            </td>
            <td><%= users[i].gender%></td>
            <td><%= users[i].isBanned%></td>
            <td><a href="/banUser/<%= users[i].userID %>" onclick="return confirm('Are you sure you want to ban this user?')">BAN</a></td>
            <td><a href="/unbanUser/<%= users[i].userID %>" onclick="return confirm('Are you sure you want to unban this user?')">UNBAN</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
