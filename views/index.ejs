<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .hero {
      background: url('/images/show101.avif') center center/cover no-repeat;
      color: white;
      padding: 150px 20px;
      text-align: center;
    }
    .faq-item button {
      width: 100%;
      text-align: left;
    }
    .trending img {
      height: 280px;
      object-fit: cover;
    }
    footer {
      background: #111;
      color: #aaa;
      padding: 20px;
    }
  </style>
</head>
<body style="background-color: black; color: white;">

<!-- Hero Section -->
<div class="hero">
  <h1>Unlimited films, series and more</h1>
  <p class="lead">Starts at $1.99. Cancel anytime.</p>
  <form class="d-flex justify-content-center mt-3" method="POST" action="/subscribe">
    <input type="email" name="email" placeholder="Email address" class="form-control w-25">
    <button type="submit" class="btn btn-danger ms-2">Get Started</button>
  </form>
</div>

<!-- Trending Now -->
<div class="container py-5">
  <h2 class="mb-4">Trending now</h2>
  <div class="row text-center trending">
    <% for (let i = 0; i < movies.length; i++) { %>
      <div class="col-6 col-md-2 mb-4">
        <img src="/images/<%= movies[i].image %>" class="img-fluid rounded">
        <h6 class="mt-2"><%= movies[i].name %></h6>
      </div>
    <% } %>
  </div>
</div>

<!-- Why Join -->
<div class="container pb-5">
  <h2 class="mb-4">More reasons to join</h2>
  <div class="row text-center">
    <div class="col-md-3">
      <h5>Enjoy on your TV</h5>
      <p>Watch on Smart TVs, consoles and more.</p>
    </div>
    <div class="col-md-3">
      <h5>Download your series</h5>
      <p>Save your favorites and watch offline.</p>
    </div>
    <div class="col-md-3">
      <h5>Watch everywhere</h5>
      <p>Stream on mobile, laptop, or TV.</p>
    </div>
    <div class="col-md-3">
      <h5>Create profiles for kids</h5>
      <p>Send children on adventures with a kid-friendly experience.</p>
    </div>
  </div>
</div>

<!-- FAQ Section -->
<div class="container pb-5">
  <h2 class="mb-4">Frequently Asked Questions</h2>
  <div class="accordion" id="faqAccordion">
    <% const faqs = [
      "What is Funny MDB?",
      "How much does it cost?",
      "Where can I watch?",
      "How do I cancel?",
      "What can I watch on Funny MDB?",
      "Is it good for children?"
    ]; %>
    <% for (let i = 0; i < faqs.length; i++) { %>
      <div class="accordion-item bg-dark text-white border-secondary">
        <h2 class="accordion-header">
          <button class="accordion-button bg-dark text-white collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq<%= i %>">
            <%= faqs[i] %>
          </button>
        </h2>
        <div id="faq<%= i %>" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
          <div class="accordion-body">Answer for <%= faqs[i] %> goes here.</div>
        </div>
      </div>
    <% } %>
  </div>
</div>

<!-- Footer Subscription Bar -->
<div class="container pb-5 text-center">
  <form class="d-flex justify-content-center mt-3" method="POST" action="/subscribe">
    <input type="email" name="email" placeholder="Email address" class="form-control w-25">
    <button type="submit" class="btn btn-danger ms-2">Get Started</button>
  </form>
</div>

<footer class="text-center">
  <p>Funny MDB &copy; <%= new Date().getFullYear() %>. All rights reserved.</p>
</footer>

</body>
</html>
