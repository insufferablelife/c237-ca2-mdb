<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    .trending img {
      height: 280px;
      object-fit: cover;
    }
    footer {
      background: #111;
      color: #aaa;
      padding: 20px;
    }
  </style>
</head>
<body style="background-color: black; color: white;">
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/mainPage">Main Page</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addMovie">Add New Movies</a>
          </li> 
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact Us</a>
          </li>  
        </ul>
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

<form method="GET" action="/mainPage" class="mb-4">
  <input type="text" name="search" placeholder="Search movies..." value="<%= search %>">
  
  <select name="rating">
    <option value="">All Ratings</option>
    <option value="1" <%= ratingFilter === '1' ? 'selected' : '' %>>1</option>
    <option value="2" <%= ratingFilter === '2' ? 'selected' : '' %>>2</option>
    <option value="3" <%= ratingFilter === '3' ? 'selected' : '' %>>3</option>
    <option value="4" <%= ratingFilter === '4' ? 'selected' : '' %>>4</option>
    <option value="5" <%= ratingFilter === '5' ? 'selected' : '' %>>5</option>
  </select>

  <button type="submit">Search</button>
</form>

<!-- Movies -->
<div class="container py-5">
  <h2 class="mb-4">Movies</h2>
<% if (movies && movies.length > 0) { %>
  <div class="row">
    <% for (let i = 0; i < movies.length; i++) { %>
      <div class="col-6 col-md-2 mb-4">
        <% let imagePath = movies[i].image ? movies[i].image : 'default.jpg'; %>
        <img src="/images/<%= imagePath %>" class="img-fluid rounded" alt="<%= movies[i].name %>">
        <h6 class="mt-2">Name: <%= movies[i].name %></h6>
        <h6 class="mt-2">Rating: <%= movies[i].rating %>‚≠ê</h6>
        <h6>
          Release Date:
          <% 
            let rawDate = movies[i].releaseDate;
            if (typeof rawDate === 'string' && rawDate.startsWith('$')) {
              rawDate = rawDate.slice(1);
            }
            const dateObj = new Date(rawDate);
            const formattedDate = isNaN(dateObj) ? 'Unknown Date' : dateObj.toLocaleDateString('en-GB');
          %>
          <%= formattedDate %>
        </h6>
        <% if (user) { %>
          <div class="d-flex flex-column gap-2 mt-2">
            <a href="/updateMovie/<%= movies[i].movieID %>" class="btn btn-warning btn-sm">Edit</a>
            <form method="POST" action="/deleteMovie/<%= movies[i].movieID %>" onsubmit="return confirm('ARE U SURE YOU WANT TO DELETE THE ACTION PACKED MOVIE???')">
              <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            </form>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>
<% } else { %>
  <p class="text-white text-center">No movies found.</p>
<% } %>
</div>


<footer class="text-center">
  <p>Movix &copy; <%= new Date().getFullYear() %>. All rights reserved.</p>
</footer>

</body>
</html>